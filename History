void Anti(string data) {
    cout << data;
    int a = 0;
    for (int i = 0; i <= 69; i++) {
        system("cls");
        
        cout << "Загрузка ресурсов   "<< a<<"/69\n\n\n";
        cout << data;
        a++;

    }

    cout << "\n\n Нажмите на любую клавишу";
    _getch();
}

void Cicl_for_pauze(string data) {
    cout << data;
    for (int i = 0; i < 140; i++) {
        system("cls");
        cout << data << endl;

    }
}

